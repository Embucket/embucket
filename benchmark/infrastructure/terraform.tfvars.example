# AWS Configuration
aws_region  = "us-east-2"
aws_profile = null  # Set to your AWS profile name if using named profiles

# Instance Configuration
instance_name = "embucket-benchmark"
instance_type = "c7i.4xlarge"  # 16 vCPU, 32 GB RAM - default for benchmarking

# Alternative instance types for different workloads:
# instance_type = "c7i.2xlarge"   # 8 vCPU, 16 GB RAM - light benchmarking
# instance_type = "c7i.8xlarge"   # 32 vCPU, 64 GB RAM - heavy CPU workloads
# instance_type = "c7i.12xlarge"  # 48 vCPU, 96 GB RAM - very heavy workloads
# instance_type = "m7i.4xlarge"   # 16 vCPU, 64 GB RAM - memory-intensive queries
# instance_type = "r7i.4xlarge"   # 16 vCPU, 128 GB RAM - large dataset benchmarks

# Storage Configuration
root_volume_size = 100  # GB

# SSH Key Configuration
private_key_path = "~/.ssh/id_rsa"
public_key_path  = "~/.ssh/id_rsa.pub"

# Environment
environment = "benchmark"
