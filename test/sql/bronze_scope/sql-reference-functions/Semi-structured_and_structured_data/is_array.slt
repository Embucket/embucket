query TT
WITH vartab AS (
  SELECT column1 AS n, PARSE_JSON(column2) AS v
  FROM VALUES (1, 'null'), 
               (2, null), 
               (3, 'true'),
               (4, '-17'), 
               (5, '123.12'), 
               (6, '1.912e2'),
               (7, '"Om ara pa ca na dhih"  '), 
               (8, '[-1, 12, 289, 2188, false,]'), 
               (9, '{ "x" : "abc", "y" : false, "z": 10} ') 
)
SELECT * FROM vartab WHERE IS_ARRAY(v)
----
