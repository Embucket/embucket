query TTTT
WITH sales(emp_id, year, revenue) AS (SELECT * FROM
  VALUES
    (0, 2010, 1000.00), (0, 2011, 1500.00), (0, 2012, 500.00), (0, 2013, 750.00),
    (1, 2010, 10000.00), (1, 2011, 12500.00), (1, 2012, 15000.00), (1, 2013, 20000.00),
    (2, 2012, 500.00), (2, 2013, 800.00)
)
SELECT emp_id, year, revenue,
    LEAD(revenue) OVER (PARTITION BY emp_id ORDER BY year) - revenue AS diff_to_next
  FROM sales
  ORDER BY emp_id, year;
----
0	2010	1000	500
0	2011	1500	-1000
0	2012	500	250
0	2013	750	NULL
1	2010	10000	2500
1	2011	12500	2500
1	2012	15000	5000
1	2013	20000	NULL
2	2012	500	300
2	2013	800	NULL

